# ==============================
# ARC Trainer System Environment Configuration
# Rename this file to `.env` and fill in your credentials.
# ==============================

# === Neo4j Database Settings ===
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password

# === Redis Configuration ===
REDIS_HOST=localhost
REDIS_PORT=6379

# === LLM API Keys ===
# OpenAI API key for AI-driven ontology processing
OPENAI_API_KEY=your_openai_api_key

# === Ontology Domains (Comma-separated) ===
ONTOLOGY_DOMAINS=legal,healthcare,education,ai_ethics,finance,warfare,general

# === Export Directory ===
EXPORT_DIR=exports/

# === Logging Configuration ===
LOG_LEVEL=INFO
